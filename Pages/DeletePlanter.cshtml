@page
@model PlantTrees.Pages.DeletePlanterModel
@{
    ViewData["Title"] = "Delete Planter";
}
<div class="fatherForms">
    <div class="forms">
        <h1 class="redH1">Delete Planter</h1>

        <p>
            Insert your data (you can only delete yourself, and be careful, this action is irreversible)
        </p>

        <form method="post">
            <div class="formSession">
                <label asp-for="Planter.Email" class="control-label"></label>
                <input type="text" asp-for="Planter.Email" class="form-control" />
                <span asp-validation-for="Planter.Email" class="text-danger"></span>
            </div>

            <div class="formSession">
                <label asp-for="Planter.Password" class="control-label"></label>
                <input type="password" asp-for="Planter.Password" class="form-control" />
                <span asp-validation-for="Planter.Password" class="text-danger"></span>
            </div>

            <div class="formSession">
                <button type="submit" class="btn red-btn">Delete Planter</button>
            </div>
        </form>

    </div>
</div>
