@page
@model PlantTrees.Pages.CreateModel
@{
    ViewData["Title"] = "Create Planter";
}

<h1>Create Planter</h1>

<form method="post">
    <div class="formSession">
        <label asp-for="Planter.Name" class="control-label"></label>
        <input type="text" asp-for="Planter.Name" class="form-control" />
        <span asp-validation-for="Planter.Name" class="text-danger"></span>
    </div>

    <div class="formSession">
        <label asp-for="Planter.LastName" class="control-label">Last Name</label>
        <input type="text" asp-for="Planter.LastName" class="form-control" />
        <span asp-validation-for="Planter.LastName" class="text-danger"></span>
    </div>

    <div class="formSession">
        <label asp-for="Planter.Age" class="control-label"></label>
        <input type="text" asp-for="Planter.Age" class="form-control" />
        <span asp-validation-for="Planter.Age" class="text-danger"></span>
    </div>

    <div class="formSession">
        <label asp-for="Planter.Nationality" class="control-label">Your Country</label>
        <input type="text" asp-for="Planter.Nationality" class="form-control" />
        <span asp-validation-for="Planter.Nationality" class="text-danger"></span>
    </div>

    <div class="formSession">
        <label asp-for="Planter.Cpf" class="control-label">CPF</label>
        <input type="text" asp-for="Planter.Cpf" class="form-control" />
        <span asp-validation-for="Planter.Cpf" class="text-danger"></span>
    </div>

    <div class="formSession">
        <button type="submit" class="btn green-btn">Create Planted Tree</button>
    </div>

</form>
